<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.moremoregreen.androidcurvedbottomnavigation.CurvedBottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/lin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/oval"
        android:layout_gravity="bottom|center"
        tools:ignore="MissingConstraints">
        
        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/fab0"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            android:elevation="6dp"
            app:vector_src="@drawable/ic_account_circle_white"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/fab1"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:elevation="6dp"
            app:vector_src="@drawable/ic_airport_shuttle_white"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/fab2"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            android:elevation="6dp"
            app:vector_src="@drawable/ic_shopping_cart_white"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>